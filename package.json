{
  "name": "flags-sdk",
  "module": "index.ts",
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "lint": "oxlint packages --ignore-path .oxlintignore",
    "test": "bun test",
    "build:all": "cd packages/flags-core && bun run build && cd ../react-sdk && bun run build && cd ../cli && bun run build",
    "publish:core": "cd packages/flags-core && npm publish --access public",
    "publish:react": "cd packages/react-sdk && npm publish --access public",
    "publish:cli": "cd packages/cli && npm publish --access public"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxlint": "^1.35.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
